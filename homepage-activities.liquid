{{ 'custom-mrtournevis.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="homepage-activities section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <h2>{{ section.settings.title }}</h2>
    {%- endif -%}
    
    <div class="activities-grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'activity' -%}
            <div class="activity-card" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <div class="card-icon">{{ block.settings.icon }}</div>
              {%- endif -%}
              <h3>{{ block.settings.title }}</h3>
              
              {%- if block.settings.services_list != blank -%}
                <ul class="services-list">
                  {%- assign services = block.settings.services_list | split: ',' -%}
                  {%- for service in services -%}
                    <li>{{ service | strip }}</li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
              
              {%- if block.settings.badges != blank -%}
                <div class="card-badges">
                  {%- assign badges = block.settings.badges | split: ',' -%}
                  {%- for badge in badges -%}
                    <span class="badge">{{ badge | strip }}</span>
                  {%- endfor -%}
                </div>
              {%- endif -%}
              
              {%- if block.settings.link_label != blank and block.settings.link_url != blank -%}
                <a href="{{ block.settings.link_url }}" class="btn-link">
                  {{ block.settings.link_label }} â†’
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

