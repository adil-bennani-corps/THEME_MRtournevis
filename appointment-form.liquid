{{ 'custom-mrtournevis.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="appointment-page section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="container">
    <h1>{{ section.settings.title | default: "Prendre rendez-vous" }}</h1>
    <p class="lead">{{ section.settings.description | default: "Vous avez besoin d'une intervention à domicile ? Remplissez le formulaire ci-dessous et nous vous recontacterons rapidement." }}</p>
    
    {%- form 'contact', id: 'AppointmentForm', class: 'appointment-form' -%}
      {%- if form.posted_successfully? -%}
        <div class="form-status form-status-list form__message" tabindex="-1" autofocus>
          <div class="form-status__message-wrapper">
            <h2 class="form-status__message" tabindex="-1" autofocus>
              {{ 'templates.contact.form.post_success' | t }}
            </h2>
          </div>
        </div>
      {%- elsif form.errors -%}
        <div class="form__message">
          <h2 class="form-status" role="alert" tabindex="-1" autofocus>
            {{ 'templates.contact.form.error_heading' | t }}
          </h2>
        </div>
        <ul class="form-status-list caption-large" role="list">
          <li>
            <a href="#AppointmentForm-email" class="link">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}.
            </a>
          </li>
        </ul>
      {%- endif -%}

      <div class="form-group">
        <label for="AppointmentForm-name">
          Nom complet <span aria-hidden="true">*</span>
        </label>
        <input
          required
          autocomplete="name"
          type="text"
          id="AppointmentForm-name"
          class=""
          name="contact[name]"
          value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
          placeholder="{{ 'templates.contact.form.name' | t }}"
        >
      </div>

      <div class="form-group">
        <label for="AppointmentForm-email">
          Email <span aria-hidden="true">*</span>
        </label>
        <input
          required
          autocomplete="email"
          type="email"
          id="AppointmentForm-email"
          class=""
          name="contact[email]"
          spellcheck="false"
          autocapitalize="off"
          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
          aria-required="true"
          {% if form.errors contains 'email' %}
            aria-invalid="true"
            aria-describedby="AppointmentForm-email-error"
          {% endif %}
          placeholder="{{ 'templates.contact.form.email' | t }}"
        >
        {%- if form.errors contains 'email' -%}
          <small class="form__message" id="AppointmentForm-email-error">
            <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
            <span class="form__message__inline">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}.
            </span>
          </small>
        {%- endif -%}
      </div>

      <div class="form-group">
        <label for="AppointmentForm-phone">
          Téléphone <span aria-hidden="true">*</span>
        </label>
        <input
          required
          type="tel"
          id="AppointmentForm-phone"
          class=""
          name="contact[phone]"
          pattern="[0-9\-+\s()]*"
          value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
          placeholder="+32 XXX XX XX XX"
        >
      </div>

      <div class="form-group">
        <label for="AppointmentForm-service">
          Type d'intervention <span aria-hidden="true">*</span>
        </label>
        <select
          required
          id="AppointmentForm-service"
          class=""
          name="contact[service_type]"
        >
          <option value="">Sélectionnez...</option>
          <option value="smartphone">Smartphone</option>
          <option value="tablette">Tablette</option>
          <option value="ordinateur">Ordinateur</option>
          <option value="console">Console de jeux</option>
          <option value="autre">Autre</option>
        </select>
      </div>

      <div class="form-group">
        <label for="AppointmentForm-message">
          Description du problème <span aria-hidden="true">*</span>
        </label>
        <textarea
          required
          rows="5"
          id="AppointmentForm-message"
          class=""
          name="contact[body]"
          placeholder="Décrivez votre problème..."
        >{% if form.body %}{{ form.body }}{% endif %}</textarea>
      </div>

      <div class="form-group">
        <label for="AppointmentForm-date">
          Date souhaitée
        </label>
        <input
          type="date"
          id="AppointmentForm-date"
          class=""
          name="contact[preferred_date]"
          min="{{ 'now' | date: '%Y-%m-%d' }}"
        >
      </div>

      <button type="submit" class="btn btn-primary">
        {{ section.settings.button_label | default: "Envoyer la demande" }}
      </button>
    {%- endform -%}
  </div>
</section>

{% schema %}
{
  "name": "Appointment Form",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre",
      "default": "Prendre rendez-vous"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Vous avez besoin d'une intervention à domicile ? Remplissez le formulaire ci-dessous et nous vous recontacterons rapidement."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texte du bouton",
      "default": "Envoyer la demande"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Couleur",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Espacement"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding haut",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bas",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Appointment Form"
    }
  ]
}
{% endschema %}

