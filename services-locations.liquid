{{ 'custom-mrtournevis.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="locations section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <h2>{{ section.settings.title }}</h2>
    {%- endif -%}
    
    <div class="locations-grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'location' -%}
            <div class="location-card" {{ block.shopify_attributes }}>
              <h3>{{ block.settings.name }}</h3>
              <p class="address">{{ block.settings.address }}</p>
              <p class="contact">
                <strong>Tel:</strong> <a href="tel:{{ block.settings.phone | remove: ' ' | remove: '.' | remove: '(' | remove: ')' }}">{{ block.settings.phone }}</a><br>
                <strong>Email:</strong> <a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a>
              </p>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Services Locations",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Titre de section",
      "default": "Nos magasins"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Couleur",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Espacement"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding haut",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bas",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "location",
      "name": "Magasin",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Nom du magasin",
          "default": "Bruxelles - Forest"
        },
        {
          "type": "textarea",
          "id": "address",
          "label": "Adresse",
          "default": "Rue de Formanoir 8\n1070 Bruxelles\nBelgique"
        },
        {
          "type": "text",
          "id": "phone",
          "label": "Téléphone",
          "default": "+32 (483)69.43.28"
        },
        {
          "type": "text",
          "id": "email",
          "label": "Email",
          "default": "info@mrtournevis.be"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Services Locations",
      "blocks": [
        {
          "type": "location",
          "settings": {
            "name": "Bruxelles - Forest",
            "address": "Rue de Formanoir 8\n1070 Bruxelles\nBelgique",
            "phone": "+32 (483)69.43.28",
            "email": "info@mrtournevis.be"
          }
        },
        {
          "type": "location",
          "settings": {
            "name": "Anderlecht",
            "address": "Rue Scheutveld 44\n1070 Anderlecht\nBelgique",
            "phone": "+32 (483)69.43.28",
            "email": "info@mrtournevis.be"
          }
        }
      ]
    }
  ]
}
{% endschema %}

